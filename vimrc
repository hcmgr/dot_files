"HIGHLIGHTING AND SYNTAX"
set background=dark
syntax on
set t_Co=256
set showmatch
"colorscheme desert

"INDENTATION"
set tabstop=8
set softtabstop=4
set expandtab
set autoindent
set shiftwidth=4
filetype indent on

"MISC"
set colorcolumn=80 
highligh ColorColumn ctermbg=8 guibg=lightgrey
set number "line numbers"

set wildmenu
set backspace=indent,eol,start
